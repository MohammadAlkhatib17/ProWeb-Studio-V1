{
  "ci": {
    "collect": {
      "startServerCommand": "next start -p 4020",
      "url": [
        "http://localhost:4020/",
        "http://localhost:4020/diensten"
      ],
      "numberOfRuns": 3,
      "settings": {
        "budgetsPath": "budgets.json",
        "preset": "perf",
        "throttlingMethod": "devtools",
        "emulatedFormFactor": "mobile",
        "throttling": {
          "cpuSlowdownMultiplier": 4,
          "throughputKbps": 1600,
          "requestLatencyMs": 150
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.95, "aggregationMethod": "median-run" }],
        "categories:seo": ["error", { "minScore": 1.00, "aggregationMethod": "median-run" }],
        "categories:best-practices": ["error", { "minScore": 0.95, "aggregationMethod": "median-run" }],
        "server-response-time": ["warn", { "maxNumericValue": 1500 }],
        "total-byte-weight": ["warn", { "maxNumericValue": 1500000 }],
        "legacy-javascript": "warn",
        "uses-optimized-images": "warn",
        "uses-responsive-images": "warn",
        "uses-text-compression": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}