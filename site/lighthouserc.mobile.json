{
  "ci": {
    "collect": {
      "startServerCommand": "next start -p 4020",
      "url": ["http://localhost:4020/", "http://localhost:4020/diensten"],
      "numberOfRuns": 3,
      "settings": {
        "budgetsPath": "budgets.json",
        "preset": "perf",
        "throttlingMethod": "devtools",
        "emulatedFormFactor": "mobile",
        "throttling": {
          "cpuSlowdownMultiplier": 4,
          "throughputKbps": 1600,
          "requestLatencyMs": 150
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          { "minScore": 0.9, "aggregationMethod": "median-run" }
        ],
        "categories:seo": [
          "error",
          { "minScore": 1.0, "aggregationMethod": "median-run" }
        ],
        "categories:best-practices": [
          "error",
          { "minScore": 0.95, "aggregationMethod": "median-run" }
        ],
        "categories:accessibility": [
          "warn",
          { "minScore": 0.9, "aggregationMethod": "median-run" }
        ],
        "server-response-time": ["error", { "maxNumericValue": 1500 }],
        "total-byte-weight": ["error", { "maxNumericValue": 1500000 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 600 }],
        "max-potential-fid": ["warn", { "maxNumericValue": 130 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 4000 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 3000 }],
        "speed-index": ["warn", { "maxNumericValue": 5000 }],
        "legacy-javascript": ["warn"],
        "uses-optimized-images": ["error"],
        "uses-responsive-images": ["error"],
        "uses-text-compression": ["error"],
        "unused-javascript": ["warn"],
        "efficient-animated-content": ["warn"],
        "modern-image-formats": ["warn"]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
